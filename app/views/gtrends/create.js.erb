  $('#new-trend input, #new-trend textarea').val('');
  $('[class^=col]').last().fadeOut(400, function() {
    $(this).remove();
    $('#trend-results div:first').after("<%= j render @gtrend %>");
  });
  //$('#pagination').html("<%= j render 'gtrends/pagination', pagy: @pagy %>");
});


