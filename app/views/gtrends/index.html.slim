#search
#trend-results.row.justify-content-center
  .col-lg-10
    .new-trend
      = form_with model: @gtrend do |f|
        = f.submit
        = f.text_area :keywords, placeholder: "Enter a list of keywords, delimited \
                                               by either commas or new lines."
  - @gtrends.each do |list|
    .col-md-15.col-lg-10
      .trend-wrapper
        .trend-header
          span= list.name
          = link_to 'Ã—', gtrend_path(list), class: 'close-btn', 
                         data: {:confirm => 'Are you sure?'}, :method => :delete
        .trend-list*{'data-simplebar'=>'', 'data-simplebar-auto-hide'=>'false'}
          .list-wrapper
            table.table.table-sm.table-borderless
              tbody
                - list.results.sort_by{|_,v| -v}.each do |kw,avg|
                  tr
                    td.trend-avg.text-right= avg
                    td.trend-keyword= kw
